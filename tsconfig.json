{
	"compilerOptions": {
		"rootDir": "./src",
		"outDir": "./dist",

		"module": "nodenext",
		"moduleResolution": "nodenext",
		"target": "esnext",

		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,

		"strict": true,
		"noUncheckedIndexedAccess": true,
		"exactOptionalPropertyTypes": true,
		"noImplicitReturns": true,

		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist"]
}
